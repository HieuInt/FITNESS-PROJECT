@model FitnessProject.ViewModels.PostViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@foreach (var post in Model.Posts)
 {
    <div class="post-box news" style="width: 60%;max-height: 1000px;margin: 5% 20%;">
        <img src="~/assets/images/img4.jpg" alt="" class="post-img">
        <h2 class="category">Tech</h2>
        <a href="#" class="post-title">How to create the best UI with Figma</a>
        <span class="post-date">12 Feb 2022</span>
        <p style="height: auto; display: block;max-width: 100%;" class="post-description">Giới Thiệu</p>
        <div class="profile">
            <img src="~/assets/images/testi1.jpg" alt="" class="profile-img">
            <span class="profile-name">MKHB</span>
        </div>
    </div>
    break;

}
    

